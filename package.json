{
  "name": "battery-widget",
  "productName": "Battery Widget",
  "version": "1.0.0",
  "private": true,
  "main": "./app/main.js",
  "homepage": "./",
  "dependencies": {
    "electron-settings": "^3.2.0",
    "macos-battery-level": "^1.1.3",
    "parse-ms": "^2.0.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-live-clock": "^3.0.0",
    "react-scripts": "2.1.2"
  },
  "devDependencies": {
    "electron": "^4.0.0",
    "electron-packager": "^13.0.1"
  },
  "scripts": {
    "react:start": "BROWSER=none react-scripts start",
    "electron": "NODE_ENV=development electron .",
    "react:build": "react-scripts build",
    "electron:build": "NODE_ENV=production electron-packager . --overwrite --platform=darwin --arch=x64 --icon=src/assets/Battery.icns --prune=true --out=release-builds --darwin-dark-mode-support=true",
    "build": "yarn react:build && yarn electron:build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}